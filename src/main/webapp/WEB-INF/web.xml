<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 能够显示在Tomcat Manager Application上 -->
    <!--<display-name>MyServlet Test</display-name>-->
    <welcome-file-list>
        <welcome-file>/backend/login.jsp</welcome-file>
    </welcome-file-list>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.gif</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    
    <!-- servlet 映射，有一些没列出来因为使用了@WebServlet注解 -->
    <servlet>
        <servlet-name>CheckcodeServlet</servlet-name>
        <servlet-class>com.zsy.cms.backend.view.CheckcodeServlet</servlet-class>
        <init-param>
            <param-name>width</param-name>
            <param-value>44</param-value>
        </init-param>
        <init-param>
            <param-name>height</param-name>
            <param-value>20</param-value>
        </init-param>
        <init-param>
            <param-name>number</param-name>
            <param-value>4</param-value>
        </init-param>
        <init-param>
            <param-name>codes</param-name>
            <param-value>ABCDEFGHIJKLMNOPQRSTUVWXYZ</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckcodeServlet</servlet-name>
        <url-pattern>/backend/images/checkcode.jpg</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SearchArticleServlet</servlet-name>
        <servlet-class>com.zsy.cms.backend.view.SearchArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchArticleServlet</servlet-name>
        <url-pattern>/backend/SearchArticleServlet</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.zsy.cms.backend.view.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/backend/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.zsy.cms.backend.view.LoginFilter</filter-class>
        <init-param>
            <param-name>filterPattern</param-name>
            <param-value>.*Servlet|.*\.jsp</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/backend/*</url-pattern>
    </filter-mapping>


</web-app>